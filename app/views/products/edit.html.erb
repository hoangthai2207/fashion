<h1>Edit your product</h1>
<div class="container">
	<div class="form-group">
	<%= form_for(@product)  do |f| %>
		<div class="form-group">
			<%= f.label 'Name' %>
			<%= f.text_field :name, placeholder: 'name....', class: 'form-control' %>
		</div>
		<%= f.select :catelogy_id, options_for_select(["Catelogy....", "1", "2"]) 	 %>

		<div class="form-group">
			<%= f.label 'Price' %>
			<%= f.text_field :price, placeholder: "price....", class: 'form-control' %>
		</div>
		<div class="form-group">
			<%= f.label 'Size' %>
			<%= f.text_field :size, placeholder: "size....", class: 'form-control' %>
		</div>
			<span class="image">
					<%= f.file_field :images,multiple: true, accept: "image/jpeg,image/gif,image/png" %>
	
				</span>
		<%= f.submit "Updating", method: :update, class: "btn btn-primary" %>
	<% end %>


	</div>

</div>




